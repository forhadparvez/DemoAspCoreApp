@model DemoApp.Models.Student

@{
    ViewData["Title"] = "Create";
}


<div class="card">
    <h5 class="card-header">Student Form</h5>
    <div class="card-body">
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Create" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="DepartmentId" class="control-label"></label>
                        <select asp-for="DepartmentId" class="form-control" asp-items="ViewBag.DepartmentId">
                            <option>------Select------</option>
                        </select>
                        <span asp-validation-for="DepartmentId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="SemesterId" class="control-label"></label>
                        <select asp-for="SemesterId" class="form-control" asp-items="ViewBag.SemesterId">
                            <option>------Select------</option>
                        </select>
                        <span asp-validation-for="SemesterId" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Roll" class="control-label"></label>
                        <input asp-for="Roll" class="form-control" />
                        <span asp-validation-for="Roll" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ContactNo" class="control-label"></label>
                        <input asp-for="ContactNo" class="form-control" />
                        <span asp-validation-for="ContactNo" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ProfileImage" class="control-label"></label>
                        <input asp-for="ProfileImage" class="form-control" />
                        <span asp-validation-for="ProfileImage" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Submit" class="btn btn-primary" />
                    </div>

                    <div class="form-group">
                        <label>@ViewBag.Message</label>
                    </div>
                </form>
            </div>

            <div class="col-md-4">
                <div class="form-group">
                    <img height="200" width="180" src="@ViewBag.Image" />
                </div>
            </div>
        </div>

        <div>
            <a asp-action="Index">Back to List</a>
        </div>
    </div>
</div>



